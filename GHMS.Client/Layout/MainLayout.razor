@inherits LayoutComponentBase

<div class="page">
    <main>
        <!-- 🔹 Top Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-custom shadow-sm py-2" style="height: 40px;">
            <div class="container-fluid">
                <!-- Brand / Logo -->
                <NavLink class="navbar-brand d-flex align-items-center" href="/">
                    <img src="images/GHLogo1.png" alt="GHMS Logo" style="height:40px;" />
                </NavLink>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu Items -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mb-2 mb-lg-0 gap-2">

                        @* Rooms (white text now) *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white-menu" href="#" id="roomsDropdown1" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-door-closed me-1"></i> Rooms
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="roomsDropdown1">
                                <li><NavLink class="dropdown-item" href="add-guesthouse">Add New Room</NavLink></li>
                                <li><NavLink class="dropdown-item" href="rooms">View All Rooms</NavLink></li>
                            </ul>
                        </li>

                        @* Booking (white text) *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white-menu" href="#" id="roomsDropdown2" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-calendar-check me-1"></i> Booking
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="roomsDropdown2">
                                <li><NavLink class="dropdown-item" href="room-scheduler">New Booking</NavLink></li>
                                <li><NavLink class="dropdown-item" href="bookings">View All Bookings</NavLink></li>
                            </ul>
                        </li>

                        @* Calendar (white text) *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white-menu" href="#" id="roomsDropdown3" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-calendar-event me-1"></i> Calendar
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="roomsDropdown3">
                                <li><NavLink class="dropdown-item" href="calendar">View Calendar</NavLink></li>
                            </ul>
                        </li>

                        @* Approvals (white text) *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white-menu" href="#" id="roomsDropdown4" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-check-circle me-1"></i> Approvals
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="roomsDropdown4">
                                <li><NavLink class="dropdown-item" href="approvals">Pending Approvals</NavLink></li>
                            </ul>
                        </li>

                        @* Reports (white text) *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white-menu" href="#" id="roomsDropdown5" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-bar-chart me-1"></i> Reports
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="roomsDropdown5">
                                <li><NavLink class="dropdown-item" href="misreport">MIS Reports</NavLink></li>
                            </ul>
                        </li>

                    </ul>

                    @* <!-- Right-side menu -->
                    <div class="d-flex align-items-center ms-auto gap-2">

                        <!-- Search button -->
                        <button class="btn btn-dark btn-sm rounded-circle">
                            <i class="bi bi-search"></i>
                        </button>

                        <!-- Help button -->
                        <button class="btn btn-dark btn-sm rounded-circle">
                            <i class="bi bi-question-circle"></i>
                        </button>

                        <!-- Notification button -->
                        <button class="btn btn-dark btn-sm rounded-circle position-relative">
                            <i class="bi bi-bell"></i>
                            <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle"></span>
                        </button>

                        <!-- User info -->
                        <div class="dropdown">
                            <button class="btn btn-dark btn-sm d-flex align-items-center gap-1" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="" alt="User" class="rounded-circle" style="height:28px;width:28px;" />
                                <span class="text-white">John Smith</span>
                                <i class="bi bi-caret-down-fill text-white"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><NavLink class="dropdown-item" href="#">Profile</NavLink></li>
                                <li><NavLink class="dropdown-item" href="#">Settings</NavLink></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><NavLink class="dropdown-item" href="#">Logout</NavLink></li>
                            </ul>
                        </div>

                    </div> *@

                </div>
            </div>
        </nav>

        <!-- 🔹 Styles -->
        <style>
            /* Navbar background */
            .bg-custom {
                background-color: #0D2360 !important;
            }

            /* NavLink active underline */
            .nav-link.active {
                font-weight: 600;
                color: #fff !important;
            }

            .nav-link.active::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 3px;
                background-color: #F68E1E;
                border-radius: 2px;
                transition: all 0.3s ease;
            }

            /* NavLink hover effect */
            .nav-link {
                position: relative;
                transition: color 0.2s;
            }

            .nav-link:hover {
                color: #F68E1E !important;
            }

            /* Navbar items spacing */
            .navbar-nav .nav-item {
                margin-right: 8px;
            }

            /* Navbar toggler */
            .navbar-toggler {
                border: 1px solid rgba(255, 255, 255, 0.2);
                border-radius: 4px;
            }

            /* Dropdown menu styling */
            .dropdown-menu {
                background-color: #ffffff;
                border: none;
                border-radius: 4px;
                box-shadow: 0px 3px 6px rgba(0,0,0,0.15);
            }

            /* Dropdown items */
            .dropdown-item {
                color: #0D2360;
                font-weight: 500;
                border-radius: 4px;
            }

            .dropdown-item:hover,
            .dropdown-item.active {
                background-color: #e0e0e0;
                border-radius: 4px;
                color: #0D2360;
            }

            /* ===== Compact Navbar ===== */
            .navbar {
                padding-top: 0.15rem !important;
                padding-bottom: 0.15rem !important;
                min-height: 40px !important;
            }

            /* Reduce nav-link padding inside navbar */
            .navbar .nav-link {
                padding-top: 0.1rem !important;
                padding-bottom: 0.1rem !important;
                font-size: 0.9rem;
            }

            /* Brand/logo size */
            .navbar-brand img {
                height: 32px;
            }

            /* Dropdown font size */
            .dropdown-menu .dropdown-item {
                font-size: 0.875rem;
            }

            /* Adjust spacing for navbar-collapse */
            .navbar-collapse {
                gap: 0.25rem;
            }

            /* White text for all main menu items */
            .text-white-menu {
                color: #ffffff !important;
            }

            .text-white-menu:hover {
                color: #F68E1E !important;
            }
            .navbar-nav .nav-item {
                margin-right: 1px;
            }
            /* Right-side navbar buttons */
            .navbar .btn-dark {
                background-color: #1a1a1a;
                color: #fff;
                border: none;
                padding: 0.3rem 0.4rem;
            }

            .navbar .btn-dark:hover {
                background-color: #F68E1E;
                color: #fff;
            }

            /* Notification red dot */
            .position-relative .bg-danger {
                width: 8px;
                height: 8px;
            }
            .navbar .dropdown-menu {
                border: 1px solid #0D2360;
            }
            .dropdown-item {
                color: #0D2360;
                font-weight: 500;
                border-radius: 4px;
            }
            /* Footer styling */
                .footer {
                    width: 100%;
                    border-top: 2px solid #F68E1E; /* Same highlight as navbar underline */
                    font-size: 0.85rem;
                }
        </style>

        <!-- 🔹 Page Content -->
        <article class="content p-4">
            @Body
        </article>
    </main>
    @* <!-- 🔹 Footer -->
    <footer class="footer bg-custom text-white text-center py-2 mt-auto">
        <small>Powered by Integra</small>
    </footer> *@
</div>
